<section class="page-header alternative-header">
    <ol class="breadcrumb">
        <li>Milton</li>
        <li>Border/Bus Trip</li>
    </ol>
    <div class="page-header_title">
        <h1>
            Border/Bus Trip
        </h1>
    </div>
</section>
<section class="page-content">

    <div class="panel panel-default">
        <div class="panel-body">
            <form class="form" action="/bordertrip/capture" method="get">
                <input type="hidden" name="accountId" id="accountId" />
                <div class="form-group">
                    <input type="text" class="form-control" name="IdNumber" id="IdNumber" />
                    <label for="IdNumber">Patient ID/Passport Number</label>
                </div>
                <div class="form-group text-right">
                    <button type="submit" class="btn btn-primary materialRipple-light materialRipple-btn">Continue<div class="materialRipple-md-ripple-container"></div></button>
                </div>
            </form>
        </div>
    </div>


    <div class="col-lg-12">
        <h4>Submitted Border/Bus Trips:</h4>
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="panel-table-inner-offset">
                    <table id="border-trips" class="table dataTable no-footer" role="grid" aria-describedby="tableDataTables1_info">
                        <thead>
                            <tr role="row">
                                <th class="sorting" tabindex="0" aria-controls="tableDataTables1" rowspan="1" colspan="1" aria-label="Patient Surname">Account</th>
                                <th class="sorting" tabindex="0" aria-controls="tableDataTables1" rowspan="1" colspan="1" aria-label="Patient Surname">Name</th>
                                <th class="sorting" tabindex="0" aria-controls="tableDataTables1" rowspan="1" colspan="1" aria-label="Patient Total Transport">Patient Count</th>
                                <th class="sorting" tabindex="0" aria-controls="tableDataTables1" rowspan="1" colspan="1" aria-label="Patient Total Transport">Date</th>
                                <th class="sorting" tabindex="0" aria-controls="tableDataTables1" rowspan="1" colspan="1" aria-label="Patient Total Transport">Amount</th>
                                <th class="sorting" tabindex="0" aria-controls="tableDataTables1" rowspan="1" colspan="1" aria-label="Patient Total Transport">Actions</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>

</section>

@section Scripts{

    <script type="text/javascript">

        $(document).ready(function () {

            $("#IdNumber").autocomplete({
                source: "/accounts/autocomplete?activeAccounts=true",
                minLength: 2,
                select: function (event, ui) {
                    $('#IdNumber').html(ui.item.value);
                    $('#accountId').val(ui.item.id);
                }
            });

            $('#border-trips').dataTable({
                serverSide: true,
                processing: true,
                ajaxSource: '/bordertrip/Json',
                columns: [
                    {
                        data: 'AccountId',
                        sortable: false,
                        searchable: false
                    },
                    {
                        data: 'Name',
                        sortable: false,
                        searchable: false
                    },
                    {
                        data: 'Count',
                        sortable: false,
                        searchable: false
                    },
                    {
                        data: 'Date',
                        sortable: false,
                        searchable: false
                    },
                    {
                        data: 'Amount',
                        sortable: false,
                        searchable: false
                    },
                    {
                        data: null,
                        sortable: false,
                        searchable: false,
                        render: function (data, type, full, meta) {
                            return '<a class="btn btn-info btn-xs" href="/bordertrip/report?borderTripId=' + data.BorderTripId + '"><i class="fa fa-print"></i></a>&nbsp;<a class="btn btn-info btn-xs" href="/bordertrip/edit?borderTripId=' + data.BorderTripId + '"><i class="fa fa-pencil"></i></a>';
                        }
                    }
                ]
            });

        });

    </script>

}