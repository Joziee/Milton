<section class="page-header alternative-header">
    <ol class="breadcrumb">
        <li>Milton</li>
        <li>Reports</li>
        <li>Patient Report</li>
    </ol>
    <div class="page-header_title">
        <h1>
            Patient Report
            <span class="page-header_subtitle"></span>
        </h1>
    </div>
</section>

<section class="page-content">

    <div class="row">
        <div class="col-md-6 panel panel-default">
            <div class="panel-body">
                <form class="form" action="/generatereport/patient" method="post">
                    <input type="hidden" name="accountId" id="accountId" />
                    <div class="form-group">
                        <input type="text" class="form-control" name="IdNumber" id="IdNumber" />
                        <label for="IdNumber">Patient ID/Passport Number</label>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Generate</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts{

    <script type="text/javascript">

        $(document).ready(function () {

            $("#IdNumber").autocomplete({
                source: "/accounts/autocomplete?activeAccounts=false",
                minLength: 2,
                select: function (event, ui) {
                    $('#IdNumber').html(ui.item.value);
                    $('#accountId').val(ui.item.id);
                }
            });
        });

    </script>

}