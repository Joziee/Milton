<section class="page-header alternative-header">
    <ol class="breadcrumb">
        <li>Milton</li>
        <li>Reports</li>
        <li>Daily Report</li>
    </ol>
    <div class="page-header_title">
        <h1>
            Daily Report
            <span class="page-header_subtitle"></span>
        </h1>
    </div>
</section>

<section class="page-content">

    <div class="row">
        <div class="col-md-6 panel panel-default">
            <div class="panel-body">
                <h3>Botswana</h3>
                <form class="form" action="/generatereport/dailybotswana" method="post">
                    <div class="form-group">
                        <input type="text" class="form-control" id="date" name="date" value="@DateTime.Now.ToString("MM/dd/yyyy")">
                        <label for="date">Date</label>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Generate</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-md-6 panel panel-default">
            <div class="panel-body">
                <h3>Swaziland</h3>
                <form class="form" action="/generatereport/dailyswaziland" method="post">
                    <div class="form-group">
                        <input type="text" class="form-control" id="swazi-date" name="date" value="@DateTime.Now.ToString("MM/dd/yyyy")">
                        <label for="date">Date</label>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Generate</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts{

    <script type="text/javascript">

        $(document).ready(function () {

            $("#date").datepicker();
            $("#swazi-date").datepicker();

        });

    </script>

}