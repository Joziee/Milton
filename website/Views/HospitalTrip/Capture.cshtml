@model List<Milton.Website.Models.HospitalTrip.HospitalTripViewModel>
@{
    var person = Milton.Web.Mvc.Helpers.Users.UserContext().Person;

    var hospitalService = DependencyResolver.Current.GetService<Milton.Services.Medical.IHospitalService>();
    var hospitals = hospitalService.GetAll();

    var hospitalList = new List<SelectListItem>();
    hospitalList.Add(new SelectListItem() { Text = "", Value = "" });
    hospitalList.AddRange(hospitals.Select(m => new SelectListItem() { Text = m.Name, Value = m.HospitalId.ToString() }));
}
<section class="page-header alternative-header">
    <ol class="breadcrumb">
        <li>Milton</li>
        <li>Capture Hospital Trip</li>
    </ol>
    <div class="page-header_title">
        <h1>
            Capture Hospital Trip for @ViewBag.Name
        </h1>
    </div>
</section>
<section class="page-content">

    <div class="panel panel-default">
        <div class="panel-body">
            <form id="hospital-trip-form" class="form" action="/hospitaltrip/capture" method="post">
                <input type="hidden" id="AccountId" name="AccountId" value="@ViewBag.AccountId" />
                <table id="table1" class="table">
                    <thead>
                        <tr>
                            <th>Hospital</th>
                            <th>Return Trip</th>
                            <th>Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count == 0)
                        {
                            <tr>
                                <td colspan="3">No hospital trips yet</td>
                            </tr>
                        }

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.HospitalName</td>
                                <td>@(item.ReturnTrip ? "Yes" : "No")</td>
                                <td>@item.Date</td>
                            </tr>
                        }
                    </tbody>
                </table>

                <h3>Capture new Hospital Trip</h3>
                <div class="form-group">
                    <select id="HospitalId" name="HospitalId" class="form-control">
                        <option value="">&nbsp;</option>
                        @foreach (var hospital in hospitals)
                        {
                            <option value="@hospital.HospitalId">@hospital.Name</option>
                        }
                    </select>
                    <label for="HospitalId">Select Hospital</label>
                </div>
                <div class="form-group">
                    <input class="form-control" id="Date" name="Date" type="text" />
                    <label>Date</label>
                </div>
                <div class="form-group">
                    <label>
                        <input class="checkbox checkbox-primary" id="return" type="checkbox" />
                        <span>Return Trip?</span>
                    </label>
                </div>
                <div class="form-group text-right">
                    <button type="submit" class="btn btn-primary materialRipple-light materialRipple-btn">Save<div class="materialRipple-md-ripple-container"></div></button>
                    <a class="btn btn-warning" href="/hospitaltrip">Cancel</a>
                </div>
            </form>
        </div>
    </div>



</section>

@section Scripts{

    <script type="text/javascript">

        $("#Date").datepicker();

        $('#hospital-trip-form').on('submit', function () {
            var val = false;
            if ($('#return').is(':checked')) val = true;
            $('#hospital-trip-form').append('<input type="hidden" name="ReturnTrip" value="' + val + '" />');
        });

        $(document).ready(function () {
            $('#hospital-trip-form').validate({
                rules: {
                    HospitalId: {
                        required: true
                    },
                    Date: {
                        required: true
                    }
                },
                highlight: function (element) {
                    $(element).closest('.form-group').addClass('has-error');
                },
                unhighlight: function (element) {
                    $(element).closest('.form-group').removeClass('has-error');
                },
                errorElement: 'span',
                errorClass: 'help-block',
                errorPlacement: function (error, element) {
                    if (element.parent('.input-group').length) {
                        error.insertAfter(element.parent());
                    } else {
                        error.insertAfter(element);
                    }
                }
            });
        });

    </script>

}