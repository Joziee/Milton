<section class="page-header alternative-header">
    <ol class="breadcrumb">
        <li>Milton</li>
        <li>Batches</li>
    </ol>
    <div class="page-header_title">
        <h1>
            Batches
            <span class="page-header_subtitle"></span>
        </h1>
    </div>
</section>

<section class="page-content">

    <div class="col-lg-12">
        <div class="text-right">
            <a href="/batch/create" class="btn btn-raised btn-primary">Create new Batch</a>
        </div>
        <h4>Submitted Batches:</h4>
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="panel-table-inner-offset">
                    <table id="batches" class="table dataTable no-footer" role="grid" aria-describedby="tableDataTables1_info">
                        <thead>
                            <tr role="row">
                                <th class="sorting_asc" tabindex="0" aria-controls="tableDataTables1" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Patient Firstnames">Batch No.</th>
                                <th class="sorting" tabindex="0" aria-controls="tableDataTables1" rowspan="1" colspan="1" aria-label="Patient Surname">Number of Accounts</th>
                                <th class="sorting" tabindex="0" aria-controls="tableDataTables1" rowspan="1" colspan="1" aria-label="Patient Surname">Border/Bus Trips</th>
                                <th class="sorting" tabindex="0" aria-controls="tableDataTables1" rowspan="1" colspan="1" aria-label="Patient Total Transport">Submission Date</th>
                                <th class="sorting" tabindex="0" aria-controls="tableDataTables1" rowspan="1" colspan="1" aria-label="Patient Total Transport">Actions</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>

</section>

@section Scripts{

    <script>

        $(function () {

            $('#batches').dataTable({
                serverSide: true,
                processing: true,
                ajaxSource: '/batch/Json',
                columns: [
                    {
                        data: 'BatchId',
                        sortable: false,
                        searchable: false,
                        width: '25%'
                    },
                    {
                        data: 'Count',
                        sortable: false,
                        searchable: false
                    },
                    {
                        data: 'BorderTrips',
                        sortable: false,
                        searchable: false
                    },
                    {
                        data: 'SubmissionDate',
                        sortable: false,
                        searchable: false
                    },
                    {
                        data: null,
                        sortable: false,
                        searchable: false,
                        render: function (data, type, full, meta) {
                            return '<a class="btn btn-info btn-xs" href="/batch/report?batchId=' + data.BatchId + '"><i class="fa fa-print"></i></a>&nbsp;<a class="btn btn-info btn-xs" href="/batch/edit?batchId=' + data.BatchId + '"><i class="fa fa-pencil"></i></a>';
                        }
                    }
                ]
            });

        });

    </script>

}